# REC.IO Trading System Environment Configuration
# Copy this file to .env and modify as needed for your environment

# Host Configuration
REC_BIND_HOST=0.0.0.0
REC_TARGET_HOST=127.0.0.1

# Service Ports
REC_MAIN_PORT=3000
REC_TRADE_MANAGER_PORT=4000
REC_TRADE_EXECUTOR_PORT=8001
REC_ACTIVE_TRADE_SUPERVISOR_PORT=8007

# Database Configuration
REC_DB_HOST=127.0.0.1
REC_DB_PORT=5432
REC_DB_NAME=rec_io_db
REC_DB_USER=rec_io_user
