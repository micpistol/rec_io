# Use Python 3.11 slim image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Copy the test script
COPY test_fingerprints.py .

# Copy the fingerprint data
COPY data/symbol_fingerprints /app/data/symbol_fingerprints

# Create startup script that just runs the test
RUN echo '#!/bin/bash\n\
echo "ðŸ§ª Running fingerprint test..."\n\
\n\
python test_fingerprints.py' > /app/start.sh && chmod +x /app/start.sh

# Start the test
CMD ["/app/start.sh"] 